@model Racemate.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", id = "auth-form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "msg-list error" })
    <fieldset>
        <legend>@ViewBag.Title</legend>
        <div>
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })
        </div>
        <div>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
        </div>
        <div>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
        </div>
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Repeat Password" })
        </div>
        <div>
            @Html.TextBoxFor(m => m.InvitationCode, new { placeholder = "Invitation Code" })
        </div>
        <div>
            <input type="submit" class="green" value="Register" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
